#include    <stdio.h>
#include	<stdlib.h>

/* 
 * ===  FUNCTION  ======================================================================
 *         Name:  main
 *  Description:  
 * =====================================================================================
 */
int main ( int argc, char *argv[] )
{
    FILE *fd = fopen("/etc/passwd", "r");
    if (fd == NULL) {
            perror("open");
            exit(1);
            }
    return EXIT_SUCCESS;
}				/* ----------  end of function main  ---------- */
