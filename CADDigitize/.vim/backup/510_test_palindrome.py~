#!/usr/bin/env python
#-*- coding:utf-8 -*-

ch = "radazr"
len_ch = len(ch)        # Longueur de la cha√Æne
renv_i = len_ch-1       # indice pour la boucle
i = 0
if len_ch%2 == 0:
    mid = len_ch / 2
else:
    mid = len_ch / 2 +1
test = 1                # 0 : Pas palindrome / 1 : Palindrome

while i <= mid:
    if ch[i] != ch[renv_i]:
        test = 0
    i += 1
    renv_i -= 1

if test==0:
    print ch, "n'est pas un palindrome"
else:
    print ch, "est un palindrome"
