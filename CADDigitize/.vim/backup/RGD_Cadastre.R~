# Paste sans les NA 
# http://stackoverflow.com/questions/13673894/suppress-nas-in-paste 
paste2 <- function(...,sep=", ") {
    L <- list(...)
    L <- lapply(L,function(x) {x[is.na(x)] <- ""; x})
    gsub(paste0("(^",sep,"|",sep,"$)"),"",
                gsub(paste0(sep,sep),sep,
                     do.call(paste,c(L,list(sep=sep)))))
}

# Chargement du package foreign pour lire les dbf
require(foreign)
# Chargement du fichier
x <- read.dbf("parcelle etendue.dbf")

# Ajout du champs "PARCELLE"
# qui est la concaténation de CODSEC (mois le 0) + PAR_NUM
x$PARCELLE <- paste0(gsub("0", "", x$CODSEC), x$PAR_NUM)

# Ajout du champs "ADRESSE"
# Concaténation des champs DLIGN*
x$ADRESSE <- paste2(x$DLIGN3, x$DLIGN4, x$DLIGN5, x$DLIGN6)
