#include    <stdio.h>
#include	<stdlib.h>
#include    "simple.h"

void display_liste( SList *list);

/*
 * ===  FUNCTION  ======================================================================
 *         Name:  display_liste
 *  Description:
 * =====================================================================================
 */
void display_liste( SList *list)
{
    list->elem = list->start;
    int i;
    for(i=0 ; i < SList_length(list); i++)
    {
        printf("%s -> \n", (char *)list->elem->data);
        list->elem = list->elem->next;
    }
    printf("\n");
}		/* -----  end of function display_liste  ----- */



/*
 * ===  FUNCTION  ======================================================================
 *         Name:  main
 *  Description:
 * =====================================================================================
 */
int main ( int argc, char *argv[] )
{

    SList *ma_liste = NULL;
    ma_liste = SList_new();
    int get = -1;
    char text[][6] = { "Hello", " ", "World", "!" };
    SList_append(ma_liste, text[0]);
    for(int i=0; i<4; i++)
    {
        printf("%d\n", i);
        SList_append(ma_liste, text[i]);
    }
    SList_prepend(ma_liste, text[2]);
    
    display_liste(ma_liste);
    return EXIT_SUCCESS;
}				/* ----------  end of function main  ---------- */
