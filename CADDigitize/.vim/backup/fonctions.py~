#-*- coding:utf8 -*-
""" Source contenant les fonctions n√©cessaires au jeu du pendu """

def creer_mot_vide(le_mot):
    vide = list()
    i=0
    while i < len(le_mot):
        vide.append("*")
        i += 1
    return vide

def recherche_lettre_mots(le_mot, la_lettre):
    if la_lettre in le_mot:
        return 1
    else:
        return 0
def retourne_lettre_trouvee(le_mot, la_lettre, mot_vide):
    result = list()
    for i, lettre in enumerate(le_mot):
        if str(lettre) == la_lettre:
            result.append((i, lettre))
    return result

def affiche_lettre_mot(la_liste_trouvee, mot_vide):
    for pos, lettre in la_liste_trouvee:
        mot_vide[pos] = lettre

def fini(le_mot_a_tester):
    if "*" in le_mot_a_tester:
        return 0
    else:
        return 1
