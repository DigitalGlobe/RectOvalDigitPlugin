#!/usr/bin/env python
#-*- coding:utf-8 -*-

from math import sqrt

txt_a = raw_input("Entrez la longueur A :")
txt_b = raw_input("Entrez la longueur B :")
txt_c = raw_input("Entrez la longueur C :")

a = int(txt_a)
b = int(txt_b)
c = int(txt_c)

perim = a+b+c
d = perim/2

aire = sqrt(d*(d-a)*(d-b)*(d-c))

print "Aire : ",aire,"Perim√®tre : ", perim


