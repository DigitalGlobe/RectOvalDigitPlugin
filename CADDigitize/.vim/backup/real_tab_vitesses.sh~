gs -dNOPAUSE -sDEVICE=pdfwrite -sOUTPUTFILE="../$3.pdf" -dBATCH *.pdf
#rm -rf "/tmp/$3/pdf/"
mv "$cur_dir/$vit" "/tmp/$3/$3.csv"
