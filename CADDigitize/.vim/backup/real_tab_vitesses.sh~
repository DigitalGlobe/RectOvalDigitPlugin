#!/bin/sh
cur_dir=`pwd`
vit="vitesses.csv"
echo "Utilisation : " $0 "<fichier sisdata> <fichier sisspeed> <dossier ou stocker donnÃ©e ex. 2012-11-23_2012-12-13>"
rm -rf "/tmp/$3"
mkdir -p "/tmp/$3/pdf"
./bin/conversion_viasis_csv "$1" "$2"
./graph.R "$vit" 50 "/tmp/$3/pdf/"
