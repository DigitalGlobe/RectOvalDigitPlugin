#include	<stdio.h>
#include    <stdlib.h>

long factorielle_recursive(long nb);
/* 
 * ===  FUNCTION  ======================================================================
 *         Name:  main
 *  Description:  
 * =====================================================================================
 */
int main ( int argc, char *argv[] )
{

    if(argc!=2)
        fprintf(stderr, "Usage : %s <nombre>\n", argv[0]);
    else
        printf("%s! = %ld\n", argv[1], factorielle_recursive(strtol(argv[1], NULL, 10)));    
    return EXIT_SUCCESS;
}				/* ----------  end of function main  ---------- */



/* 
 * ===  FUNCTION  ======================================================================
 *         Name:  factorielle_recursive
 *  Description:  
 * =====================================================================================
 */
long factorielle_recursive ( long nb )
{
    long resultat;
    if(nb < 0)
        resultat = 0;
    else if( (nb == 1) || (nb == 0) )
        resultat = 1;
    else
        resultat = nb * factorielle_recursive(nb-1);

    return resultat;
}		/* -----  end of function factorielle_recursive  ----- */
