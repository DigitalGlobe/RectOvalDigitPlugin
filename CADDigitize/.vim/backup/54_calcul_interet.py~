#!/usr/bin/env python
#-*- coding:utf-8 -*-

interet = 4.3/100
annees = 20
somme_init = 100
somme_finale = somme_init
# version boucle
boucle = 1

while boucle <= annees:
    somme_finale += somme_finale * interet
    boucle += 1

print somme_finale

# version math
from math import pow
somme_finale = somme_init * pow(1+interet, annees)
print somme_finale
