#include	<stdio.h>
#include    <stdlib.h>

void hanoi(int nb_disques, int disk_dep, int disk_arr, int disk_inter);


/* 
 * ===  FUNCTION  ======================================================================
 *         Name:  main
 *  Description:  
 * =====================================================================================
 */
int main ( int argc, char *argv[] )
{
    int nbd;
    printf("Nombre de disques :\n");
    scanf("%d", &nbd);

    hanoi(nbd, 1,3,2);
    return EXIT_SUCCESS;
}				/* ----------  end of function main  ---------- */



/* 
 * ===  FUNCTION  ======================================================================
 *         Name:  hanoi
 *  Description:  
 * =====================================================================================
 */
void hanoi(int nb_disques, int disk_dep, int disk_arr, int disk_inter)
{
    static int nb_coup = 0;
    if(nb_disques == 1)
        printf("%4d\t%d -> %d\n", ++nb_coup, disk_dep, disk_arr);
    else
    {
        hanoi(nb_disques-1, disk_dep, disk_arr, disk_inter);
        hanoi(1, disk_dep, disk_arr, disk_inter);
        hanoi(nb_disques-1, disk_inter, disk_arr, disk_dep);
    }

}		/* -----  end of function hanoi  ----- */


