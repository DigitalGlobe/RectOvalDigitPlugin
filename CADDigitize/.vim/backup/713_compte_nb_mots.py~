#!/usr/bin/env python
#-*- coding:utf-8 -*-

def compteMots(ph):
    "Compte le nombre de mots (entre espaces) de ph."
    a = 0
    nb_mot = 0
    while a < len(ph):
        if ph[a] == ' ':
            nb_mot += 1
        if ((a==len(ph)-1) and (ph[a] != ' ')):
            nb_mot +=1
        a += 1
    return nb_mot

print compteMots('On considÃ¨re comme mots les ensembles... ')
