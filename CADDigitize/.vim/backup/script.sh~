#!/usr/local/bin/bash
# bash check if directory exists
if [ -d $1 ]; then
	echo "Directory exists"
    rm -rf $1/*
else 
	echo "Directory does not exists"
    mkdir $1
fi 
varTex="${1}.tex"
varDvi="${1}.dvi"
varPs="${1}.ps"
varPdf="${1}.pdf"

cd $1
cp ../$varTex .
latex $varTex
dvips $varDvi
ps2pdf $varPs
evince $varPdf

