#!/usr/bin/env python
#-*- coding:utf-8 -*-

# Déclarer argent joueur et init (eg. 100)
# boucle jeu
# Tant que argent peut jouer
#   Demande quelle mise
#       Vérifier la mise
#   Demande quel numéro
#       Vérifie si dans la liste possible
#   Lancer la roulette
#       Si numéro identique
#            gain *= 3
#       Si numéro même couleur (test par modulo : pair (rouge) ou non (noir))

from random import randrange
from math import ceil

somme=100
jeu_en_cours = True

while (jeu_en_cours == True) or (somme >= 0):
#   Demande la mise. Ne peut être inférieur à 1 ou supérieur à somme
    mise = 0
    while mise <= 0 or mise > somme:
        mise = raw_input("Quelle somme souhaitez vous miser ?")
        try:
            mise = int(mise)
            assert (mise > 0) or (mise < somme)
        except ValueError:
            print "Vous n'avez pas saisi un nombre."
            mise = -1
            continue
        except AssertionError:
            print "La mise doit être comprise entre 0 et", somme
            mise = -1
#   Demande le nombre sur lequel miser
    nombre_mise = -1
    while nombre_mise < 0 or nombre_mise > 49:
        nombre_mise = raw_input("Sur quel nombre souhaitez vous miser ?")
        try:
            nombre_mise = int(nombre_mise)
            assert nombre_mise > 0 or nombre_mise < 49
        except ValueError:
            print "Vous n'avez pas saisi un nombre."
            nombre_mise = -1
            continue
        except AssertionError:
            print "La mise doit être comprise entre 0 et", somme
            nombre_mise = -1
#   Lance le jeu
    numero_gagnant = randrange(50)
    print "Le numéro gagnant est", numero_gagnant

# On établit le gain du joueur
    if numero_gagnant == nombre_mise:
        print "Félicitations ! Vous obtenez", mise * 3, "$ !"
        somme += mise * 3
    elif numero_gagnant % 2 == nombre_mise % 2: # ils sont de la même couleur
        mise = ceil(mise * 0.5)
        print "Vous avez misé sur la bonne couleur. Vous obtenez", mise, "$"
        somme += mise
    else:
        print "Désolé l'ami, c'est pas pour cette fois. Vous perdez votre mise."
        somme -= mise

# On interrompt la partie si le joueur est ruiné
    if somme <= 0:
        print("Vous êtes ruiné ! C'est la fin de la partie.")
        jeu_en_cours = False
    else:
        # On affiche l'argent du joueur
        print "Vous avez à présent", somme , "€"
        quitter = raw_input("Souhaitez-vous quitter le casino (o/n) ? ")
        if quitter == "o" or quitter == "O":
            print "Vous quittez le casino avec vos gains."
            jeu_en_cours = False
